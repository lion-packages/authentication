{
    "name": "lion/authentication",
    "description": "library to authenticate users in 2 steps",
    "type": "library",
    "license": "MIT",
    "homepage": "https://dev.lion-packages.com",
    "keywords": [
        "lion",
        "authentication",
        "lion-authentication"
    ],
    "support": {
        "issues": "https://github.com/lion-packages/authentication/issues",
        "source": "https://github.com/lion-packages/authentication"
    },
    "autoload": {
        "psr-4": {
            "Lion\\Authentication\\": "src/LionAuthentication/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "lion/test": "^2.0 || ^3.0",
        "bacon/bacon-qr-code": "^3.0",
        "pragmarx/google2fa-qrcode": "^3.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.11 || ^4.0",
        "infection/infection": "^0.29.14 || ^0.31.0",
        "overtrue/phplint": "^9.5"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
